<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Todo list</display-name>
  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>ru.job4j.todo.filters.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <listener>
    <listener-class>ru.job4j.todo.AppContextListener</listener-class>
  </listener>
  <servlet>
    <servlet-name>TasksServlet</servlet-name>
    <servlet-class>ru.job4j.todo.controllers.TasksServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>TasksAjaxServlet</servlet-name>
    <servlet-class>ru.job4j.todo.controllers.TasksAjaxServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RolesServlet</servlet-name>
    <servlet-class>ru.job4j.todo.controllers.RolesServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AuthServlet</servlet-name>
    <servlet-class>ru.job4j.todo.controllers.AuthServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>ru.job4j.todo.controllers.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>ru.job4j.todo.controllers.RegisterServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RolesAjaxServlet</servlet-name>
    <servlet-class>ru.job4j.todo.controllers.RolesAjaxServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CategoriesAjaxServlet</servlet-name>
    <servlet-class>ru.job4j.todo.controllers.CategoriesAjaxServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TasksServlet</servlet-name>
    <url-pattern>/tasks.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TasksAjaxServlet</servlet-name>
    <url-pattern>/tasks.ajax</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AuthServlet</servlet-name>
    <url-pattern>/auth.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RolesServlet</servlet-name>
    <url-pattern>/roles.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RolesAjaxServlet</servlet-name>
    <url-pattern>/roles.ajax</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CategoriesAjaxServlet</servlet-name>
    <url-pattern>/categories.ajax</url-pattern>
  </servlet-mapping>
</web-app>
